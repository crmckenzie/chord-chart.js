@{
    ViewBag.Title = "Home Page";
}

<script src="~/Scripts/chordcharts.js"></script>


<style>
    .chord-chart {
        width: 100px;
    }
    .guitar-fret {
        width: 20px;
    }
</style>

<div class="container">
    <label>Chord<input type='text' id='chord' value="CEG" /></label>
    <label>Position<input type='text' id='position' value="0" /></label>
    <button type='button' id='update'>Update</button>
</div>
<div id="target" class='container row'>
</div>

<script type="text/javascript">
    $(function() {
        try {

            var options = {
                element: "#target"
            };

            var chart = isg.guitar.Chart(options);

            function updateFromUI() {
                var notes = $("#chord").val();
                chart.notes(notes);

                var rawValue = $("#position").val();
                var position = parseInt(rawValue);
                chart.position(position);
            }

            $("#update").click(function () {
                updateFromUI();
            });

            updateFromUI();


        }
        catch (e) {
            alert(e.toString());

        }
    });
</script>